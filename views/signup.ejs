<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<%- include('top.html') -%>

<body style="background: url('https://indonesiakaya.com/wp-content/uploads/2020/10/curug_embun_1200.jpg') center/cover; position: relative;" class="text-white">
  <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.6);"></div>
  <%- include('navbarSocial.ejs') -%>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card bg-transparent text-white">
          <div class="card-body">
            <h1 class="text-center mb-4">Sign up</h1>
            <form action="/signup" method="POST">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" style="border-radius: 12px;" autocomplete="off"
                  name="username" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password" autocomplete="off" style="border-radius: 12px;"
                    name="password" required>

                </div>
              </div>
              <div class="mb-3">
                <label for="desc" class="form-label">Deskripsi (Opsional)</label>
                <textarea type="desc" class="form-control text-white" id="desc" name="desc" style="border-radius: 12px;" required autocomplete="off"></textarea>
              </div>
              <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="showPassword" onclick="myFunction()">
                <label class="form-check-label" for="showPassword">Show Password</label>
              </div>
              <button type="submit" class="btn btn-primary" style="border-radius: 12px;">Sign up</button>
            </form>
            <p class="mt-3 text-center">Already have an account? <a href="/login">Login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Mendapatkan data pengguna dari userProfile jika tersedia
    const userData = localStorage.getItem('loggedInUser');
    if (userData) {
      window.location.href = "/chat"
    }

    function myFunction() {
      var x = document.getElementById("password");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
  </script>
</body>

</html>
