<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Beranda - rejangpedia</title>
    <%- include('import.ejs') -%>
    <meta property="og:title" content="rejangpedia" />
    <meta property="og:description" content="Punyo Kito Galo" />
    <meta property="og:image" content="/logo.png" />
    <meta property="og:url" content="/" />
  </head>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container">
      <div
        class="header text-dark text-center mt-2 rounded-bottom"
        style="font-family: 'Montserrat' !important"
      >
        <img
          id="logo"
          draggable="false"
          class="border-0"
          src="https://cdn.glitch.global/2f9a2460-083a-49a5-a55f-2abb8ce71e54/logo.png?v=1699767799122"
        />
        <p><i class="fa fa-globe"></i> Punyo Kito Galo</p>
      </div>
      <div class="search-box d-flex justify-content-center">
        <input
          autocomplete="off"
          type="text"
          style="border-radius: 12px 8px 8px 12px; padding: 25px"
          class="form-control search-input custom-input mr-1"
          id="searchInput"
          placeholder="Mau Cari Apa Sanak..."
        />
        <button
          type="submit"
          class="btn btn-primary border-0 rounded-0"
          style="border-radius: 8px 12px 12px 8px !important"
          onclick="search()"
          id="searchButton"
        >
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>

      <h4 class="m-2 text-white">Apo Bae Yang Disiko?</h4>

      <div
        class="parent row flex-nowrap overflow-auto"
        style="width: 100%; overflow-x: auto"
      >
        <div class="col">
          <% var op = Math.floor(Math.random()*data.length) %>
          <h6 class="card-title ml-2">Tengok Galo Artikel</h6>
          <a
            class="card m-1 card-img-top"
            style="
              color: white;
              background: url('<%= data[op].Image ? data[op].Image : `https://images.pexels.com/photos/1563356/pexels-photo-1563356.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500` %>');
              background-repeat: no-repeat;
              background-size: cover;
              background-position: center;
              height: 220px;
            "
            href="/data"
          >
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              "
            ></div>
          </a>
          <a
            href="/details/<%= data[op].id %>"
            class="btn btn-primary m-1 border-0"
            style="
              background-color: #0d7502ff !important;
              color: white !important;
              width: fit-content;
              border-radius: 12px;
              text-align: left !important;
            "
            ><i
              class="fa fa-chevron-right"
              aria-hidden="true"
              style="color: white !important"
            ></i>
            Baco <%= data[op].Title.substring(0, 10) %>...
          </a>
        </div>
        <div class="col">
          <h6 class="card-title ml-2">Kamus Bahasa Rejang</h6>
          <a
            class="card m-1 card-img-top"
            href="https://kamusrejang.glitch.me"
            style="
              background: url('https://cdn.glitch.global/2f9a2460-083a-49a5-a55f-2abb8ce71e54/thumbnails%2Fkamus.jpg?1702886881063');
              color: white;
              background-position: center;
              height: 220px;
            "
          >
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              "
            ></div>
          </a>
          <a
            href="https://kamusrejang.glitch.me/database"
            class="btn btn-primary m-1 border-0"
            style="
              background-color: #dac26aff !important;
              border-radius: 12px;
              width: fit-content;
              color: black !important;
              text-align: left !important;
            "
            ><i
              class="fa fa-plus"
              aria-hidden="true"
              style="color: white !important"
            ></i>
            Tambahkan Kata</a
          >
        </div>
        <div class="col">
          <h6 class="card-title ml-2">Media Sosial!</h6>

          <a
            class="card m-1 card-img-top"
            href="/chat"
            style="
              background: url('https://img.freepik.com/free-vector/person-addicted-social-media-illustration-concept_52683-32210.jpg');
              color: white;
              background-position: center;
              height: 220px;
            "
          >
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              "
            ></div>
          </a>
        </div>
      </div>
      <hr class="hr" />
      <h4 class="text-white">Artikel Pilihan</h4>

      <div class="mb-2" style="max-width: 100%; border-radius: 24px">
        <div
          class="parent row flex-nowrap overflow-auto mr-1"
          style="overflow-x: auto"
        >
          <% dataPilihan.forEach(function(entry) { %> <% if
          (entry.Title.toLowerCase().includes("rejang") ||
          entry.Title.toLowerCase().includes("bengkulu") ||
          entry.Content[0].babContent.toLowerCase().includes("rejang") ||
          entry.Content[0].babContent.toLowerCase().includes("bengkulu")) { %>
          <div class="col">
            <a
              class="card"
              href="/details/<%= entry.id %>"
              style="
                border-radius: 12px;
                background: rgba(0, 0, 0, 0) !important;
                border: none;
                width: 100%;
                background-repeat: no-repeat;
                background-size: cover;
              "
            >
              <h6
                class="card-title mb-2"
                style="
                  margin: 0;
                  max-height: 1.2em;
                  overflow: hidden;
                  font-family: Arial, Helvetica, sans-serif;
                  text-overflow: ellipsis;
                  white-space: no-wrap;
                "
              >
                <%= entry.Title %>
              </h6>
              <img class="card-img-top" style="border-radius: 12px !important;
              border: none" src="<%= entry.Image ? entry.Image :
              "https://e1.pxfuel.com/desktop-wallpaper/908/281/desktop-wallpaper-non-copyrighted-no-copyright.jpg"%>"
              onerror="this.remove();" />
            </a>
          </div>
          <% } %> <% }); %>
        </div>
      </div>
      <hr class="hr" />
    </div>
    <div id="insert-here" class="text-center"></div>
    <footer class="bg-body-tertiary text-center text-lg-start">
      <!-- Copyright -->
      <div class="text-center p-4" style="background-color: rgba(30, 30, 30)">
        Made By:
        <a class="text-white" href="https://fathin.my.id/">M.Fathin Halim</a>
      </div>
      <!-- Copyright -->
    </footer>

    <script>
      let mouseDown = false;
      let startX, scrollLeft;
      const slider = document.querySelector(".parent");

      const startDragging = (e) => {
        mouseDown = true;
        startX = e.pageX - slider.offsetLeft;
        scrollLeft = slider.scrollLeft;
      };

      const stopDragging = (e) => {
        mouseDown = false;
      };

      const move = (e) => {
        e.preventDefault();
        if (!mouseDown) {
          return;
        }
        const x = e.pageX - slider.offsetLeft;
        const scroll = x - startX;
        slider.scrollLeft = scrollLeft - scroll;
      };

      // Add the event listeners
      slider.addEventListener("mousemove", move, false);
      slider.addEventListener("mousedown", startDragging, false);
      slider.addEventListener("mouseup", stopDragging, false);
      slider.addEventListener("mouseleave", stopDragging, false);
      window.scrollTo(0, 0);

      function search() {
        const searchTerm = searchInput.value;
        console.log("Search term:", searchTerm);
        window.location.href = `/search?term=${searchTerm}`;
      }

      document
        .getElementById("searchButton")
        .addEventListener("click", function () {
          search();
        });

      const searchInput = document.getElementById("searchInput");
      searchInput.addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
          search();
        }
      });
      function myFunc() {
        var cell4 = document.getElementById("insert-here");
        var element3 = document.createElement("a");
        element3.href = "/accept";
        element3.innerHTML = "Admin Dashboard";
        element3.className = "btn btn-danger btn-xs mb-4";
        cell4.appendChild(element3);
      }
      if (localStorage.getItem("atmin")) {
        myFunc();
        var cell4 = document.getElementById("insert-here");
        var element3 = document.createElement("a");
        element3.href = "/rekrutatmin";
        element3.innerHTML = "Recrut Admin";
        element3.className = "btn btn-info ml-2 btn-xs mb-4";
        cell4.appendChild(element3);
      }
    </script>
  </body>
</html>
