<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Homepage - Rejang Pedia</title>
    <%- include('import.ejs') -%>
    <!-- Tambahkan link ke Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rmok6z1LlBfUTvNTzqFMrjsG5lkZz0AIqrKEj3frjq9p0F65Nebzczr6ew8zI26q"
      crossorigin="anonymous" />
  </head>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container">
      <div
        class="header text-white text-center p-4"
        style="background-color: #d80032">
        <h1>RejangPedia!</h1>
      </div>
      <div class="search-box d-flex justify-content-center">
        <input
          type="text"
          class="form-control search-input"
          id="searchInput"
          placeholder="Mau Cari Apa Sanak..." />
        <button class="btn btn-primary" id="searchButton">Search</button>
      </div>

      <h3>Mau Lihat Lihat Artikel?</h3>
      <% data.forEach(function(entry) { %>
      <li class="list-group-item">
        <div class="random-article bg-light p-4">
          <h2 class="text-primary m-1"><%= entry.Title %></h2>
          <img
            src="<%= entry.Image %>"
            style="height: 200px; border-radius: 24px"
            class="m-1"
            alt="Featured Article Image" />
          <br />
          <a
            class="btn btn-primary"
            class="m-1"
            href="/details/<%= entry.id %>">
            Lihat Contentnya
          </a>
        </div>
        <% }); %>
      </li>
    </div>

    <!-- Tambahkan script Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-jOo0BtDHf6my/BsFjEZmc0RivzubPP6Ie4pDMS9/wf1W4lTHj4/f5G5L5z0"
      crossorigin="anonymous"></script>
    <script>
      document
        .getElementById("searchButton")
        .addEventListener("click", function () {
          // Dapatkan teks pencarian
          const searchTerm = document.getElementById("searchInput").value;

          // Redirect ke halaman hasil pencarian
          window.location.href = `/search?term=${searchTerm}`;
        });
    </script>
  </body>
</html>
