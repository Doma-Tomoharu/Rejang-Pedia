<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Homepage - Rejang Pedia</title>
    <%- include('import.ejs') -%>
    <!-- Tambahkan link ke Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rmok6z1LlBfUTvNTzqFMrjsG5lkZz0AIqrKEj3frjq9p0F65Nebzczr6ew8zI26q"
      crossorigin="anonymous" />
    <meta property="og:title" content="RejangPedia" />
    <meta property="og:description" content="Punyo Kito Galo" />
    <meta property="og:image" content="/logo.png" />
    <meta
      property="og:url"
      content="https://rejang-pedia.mfathinhalim.repl.co/" />
  </head>
  <style>
    .custom-input {
      padding: 10px; /* Sesuaikan padding sesuai preferensi Anda */
      font-size: 16px; /* Sesuaikan ukuran font sesuai preferensi Anda */
    }
    #logo {
      background-color: rgba(63, 159, 142, 0) !important;
      height: 10rem;
      width: 18rem; /* Ensure it's responsive */
    }

    @media only screen and (max-width: 600px) {
      #logo {
        background-color: rgba(63, 159, 142, 0) !important;
        height: 28vw;
        width: 60vw; /* Ensure it's responsive */
      }

    }
    .card {
      width: 230px;
      height: 230px;
      border-radius: 24px;
    }
    ::-webkit-scrollbar { 
      display: none;  /* Safari and Chrome */
  }

  </style>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container" id="insert-here">
      <div
        class="header text-dark text-center mt-2 rounded-bottom"
        style="font-family: 'Montserrat' !important">
        <img id="logo" class="border-0" src="/logo.png" />
        <p>Punyo Kito Galo</p>
      </div>
      <div class="search-box d-flex justify-content-center">
        <input
          autocomplete="false"
          type="text"
          style="border-radius: 12px 8px 8px 12px; padding: 25px"
          class="form-control search-input custom-input mr-1"
          id="searchInput"
          placeholder="Mau Cari Apa Sanak..." />
        <button
          type="submit"
          class="btn btn-primary border-0 rounded-0"
          style="border-radius: 8px 12px 12px 8px !important"
          onclick="search()"
          id="searchButton">
          <i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </div>

      <h3 class="m-2">Apo Bae Yang Disiko?</h3>

      <ul
        class="list-group mt-2"
        style="
          background: #3f9f8dff;

          border-radius: 24px 24px 0 0;
        ">
        <!-- Loop through your data to display articles that contain "rejang" -->
      </ul>
      <div class="row flex-nowrap overflow-auto" style="max-width: 100%; overflow-x: auto">
        <div class="col col-md-4">
          <% var op = Math.floor(Math.random()*data.length) %>
          <a
            class="card m-1"
            style="
              color: white;
              background: url('<%= data[op].Image %>');
              background-repeat: no-repeat;
              background-size: cover;
            "
            href="/data">
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              ">
              <div class="card-body">
                <h5 class="card-title">Tengok Artikel</h5>
              </div>
            </div>
          </a>
          <a
            href="/details/<%= data[op].id %>"
            class="btn btn-primary m-1 rounded-pill border-0"
            style="background-color: #0d7502ff !important"
            ><i class="fa fa-chevron-right" aria-hidden="true"></i> Baco <%=
            data[op].Title.substring(0, 15)  %>...
          </a>
        </div>
        <div class="col col-md-4">
          <a
            class="card m-1"
            href="https://kamusrejang.rejanglebongkab.go.id"
            style="background: url('/kamus.jpg'); color: white">
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              ">
              <div class="card-body">
                <h5 class="card-title">Kamus Bahasa Rejang</h5>
              </div>
            </div>
          </a>
          <a
            href="https://kamusrejang.rejanglebongkab.go.id/database"
            class="btn btn-primary m-1 rounded-pill border-0"
            style="background-color: #dac26aff !important"
            ><i class="fa fa-plus" aria-hidden="true"></i> Tambahkan Kata</a
          >
        </div>
        <div class="col col-md-4">
          <a class="card m-1" href="/chat"
 style="background: url('https://img.freepik.com/free-vector/person-addicted-social-media-illustration-concept_52683-32210.jpg');  color: white">
            <div
              class="dark-overlay"
              style="
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px;
                background: rgba(0, 0, 0, 0.2);
              ">
              <div class="card-body">
              <h5 class="card-title">
                Media Sosial!
              </h5>
            </div>
            </div>
            
          </a>
        </div>
      </div>
      <hr class="hr" />
      <ul
        class="list-group mt-2"
        style="
          background: #3f9f8dff;

          border-radius: 24px 24px 0 0;
        ">
        <!-- Loop through your data to display articles that contain "rejang" -->
      </ul>
      <div class="p-1 mb-2 " id="pilihan" style="max-width: 100%; border-radius: 24px; color: white !important;">

        <h3 class="ml-4 mt-3 mb-3" style="color: white !important;">Artikel Pilihan</h3>
      <div class="row flex-nowrap overflow-auto m-1" style="overflow-x: auto">

        <% dataPilihan.forEach(function(entry) { %> 
          <% if (entry.Title.toLowerCase().includes("rejang") || entry.Title.toLowerCase().includes("bengkulu") || entry.Content[0].babTitle.toLowerCase().includes("rejang") || entry.Content[0].babTitle.toLowerCase().includes("bengkulu") || entry.Content[0].babContent.toLowerCase().includes("rejang") || entry.Content[0].babContent.toLowerCase().includes("bengkulu")) { %>
            <div class="col col-md-4">
              <a class="card m-1" id="card-pilihan" href="/details/<%= entry.id %>" style="height:300px;width: 330px; border-radius: 24px; border: none; background-repeat: no-repeat; background-size: cover;">
                <img class="card-img-top" style="height: 130px; width: 100%; border-radius: 24px 24px 0 0 !important; border: none;" src="<%= entry.Image %>"/>
                  <div class="card-body">
                    <h6 class="card-title" style="color: white !important;"><%= entry.Title %></h6>
                    <p class="card-text" style="color: white !important;"><%- entry.Content[0].babContent.replace(/<[^>]+>/g,
                      '').substring(0, 30) %>...</p>
                  </div>
              </a>
            </div>
          <% } %> 
        <% }); %>
      </div>
      <hr class="hr" style="border: 1px solid #7F8487;" />

      <div class="p-1 mb-2 " id="pilihan" style="max-width: 100%; border-radius: 24px; color: white !important;">

        <h3 class="ml-4 mt-3 mb-3" style="color: white !important;">Artikel Acak</h3>
      <div class="row flex-nowrap overflow-auto m-1" style="overflow-x: auto">

        <% dataAcak.forEach(function(entry) { %> 
            <div class="col col-md-4">
              <a class="card m-1" id="card-pilihan" href="/details/<%= entry.id %>" style="height:300px; width:330px; border-radius: 24px; border: none; background-repeat: no-repeat; background-size: cover;">
                <img class="card-img-top" style="height: 130px; width: 100%; border-radius: 24px 24px 0 0 !important; border: none;" src="<%= entry.Image %>"/>
                  <div class="card-body">
                    <h6 class="card-title" style="color: white !important;"><%= entry.Title %></h6>
                    <p class="card-text" style="color: white !important;"><%- entry.Content[0].babContent.replace(/<[^>]+>/g,
                      '').substring(0, 30) %>...</p>
                  </div>
              </a>
            </div>
        <% }); %>
      </div>
    </div>


      </div>
    </div>

    <!-- Tambahkan script Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-jOo0BtDHf6my/BsFjEZmc0RivzubPP6Ie4pDMS9/wf1W4lTHj4/f5G5L5z0"
      crossorigin="anonymous"></script>
    <script>
      function search() {
        const searchTerm = searchInput.value;
        console.log("Search term:", searchTerm);
        window.location.href = `/search?term=${searchTerm}`;
      }

      document
        .getElementById("searchButton")
        .addEventListener("click", function () {
          search();
        });

      const searchInput = document.getElementById("searchInput");
      searchInput.addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
          search();
        }
      });
      function myFunc()
      {
        var cell4 = document.getElementById('insert-here');
      var element3 = document.createElement("a");
      element3.href="/accept"
      element3.innerHTML="Admin Dashboard";
      element3.className="btn btn-danger btn-xs mb-4";
      cell4.appendChild(element3);
      }
      if(localStorage.getItem("atmin")){
        myFunc();
        var cell4 = document.getElementById('insert-here');
      var element3 = document.createElement("a");
      element3.href="/rekrutatmin"
      element3.innerHTML="Recrut Admin";
      element3.className="btn btn-info ml-2 btn-xs mb-4";
      cell4.appendChild(element3);
      }
    </script>
  </body>
</html>
