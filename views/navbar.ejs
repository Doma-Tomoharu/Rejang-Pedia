<script>
  document
    .getElementById("searchButtonNav")
    .addEventListener("click", function () {
      // Dapatkan teks pencarian
      const searchTerm = document.getElementById("searchInputNav").value;

      // Redirect ke halaman hasil pencarian
      window.location.href = `/search?term=${searchTerm}`;
    });
  const searchInputNav = document.getElementById("searchInputNav");
  searchInputNav.addEventListener("keypress", function (event) {
    if (event.key === "Enter") {
      // Dapatkan teks pencarian
      const searchTerm = searchInputNav.value;

      // Redirect ke halaman hasil pencarian
      window.location.href = `/search?term=${searchTerm}`;
    }
  });
  var prevScrollpos = window.pageYOffset;
  window.onscroll = function () {
    var currentScrollPos = window.pageYOffset;
    var bawahNavbar = document.getElementById("khususHpBawah");
    var atasNavbar = document.getElementById("khususHp");

    if (prevScrollpos > currentScrollPos) {
      // Scroll ke atas, tampilkan navbar khusus HP
      bawahNavbar.style.bottom = "0";
      atasNavbar.style.top = "0";
    } else {
      // Scroll ke bawah, sembunyikan navbar khusus HP
      bawahNavbar.style.bottom = "-100px"; // Ubah sesuai dengan tinggi navbar
      atasNavbar.style.top = "-100px"; // Ubah sesuai dengan tinggi navbar
    }
    prevScrollpos = currentScrollPos;
  };
  function openApp() {
    // Coba membuka tautan
    if (navigator.supportedURLScheme) {
      navigator.supportedURLScheme.open(
        "rejang://pedia" +
          window.location.href.replace(
            "https://rejang-pedia.mfathinhalim.repl.co"
          ),
        function () {
          // Tautan berhasil dibuka, tidak ada tindakan lanjutan diperlukan
        },
        function () {
          // Tautan tidak dapat dibuka, tetap di halaman web saat ini
          // Anda dapat menambahkan logika lain di sini jika diperlukan
        }
      );
    } else {
      // Tautan kustom akan digunakan jika navigator.supportedURLScheme tidak tersedia
      window.location.href =
        "rejang://pedia" +
        window.location.href.replace(
          "https://rejang-pedia.mfathinhalim.repl.co",
          ""
        );
    }
  }
</script>
