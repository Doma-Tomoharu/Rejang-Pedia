<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include('import.ejs') -%>
    <title>RejangPedia</title>
  </head>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container p-3">
      <h1 class="display-4"><%= data.Title %></h1>
      <% if (data.Image) { %>
      <img
        src="<%= data.Image %>"
        style="width: 300px; border-radius: 24px"
        class="img-fluid"
        alt="Image" />
      <% } %> <% data.Content.forEach(function(bab) { %>
      <div class="my-4">
        <h3><%= bab.babTitle %></h3>
        <p><%- bab.babContent %></p>
      </div>
      <% }); %>
      <p>Dimulai Oleh: <%= data.Pembuat %></p>
      <p>Diedit Terakhir: <%= data.Diedit %></p>

      <a class="btn btn-info" href="/edit/<%= data.id %>"> Edit Artikel </a>
    </div>
  </body>
</html>
