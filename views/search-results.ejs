<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include('import.ejs') -%>
    <title>RejangPedia</title>
  </head>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container mt-5 mb-5">
      <h1 class="display-4">Iko Kan Sanak?</h1>
      <ul
        class="list-group"
        style="
          border-radius: 24px !important;
          background: #0aa2c4ff !important;
          list-style-type: none;
        ">
        <% results.forEach(function (result, index) { %>
        <li>
          <div class="d-flex align-items-center m-3">
            <img
              class="listing-image"
              style="
                width: 60px;
                height: 60px;
                object-fit: cover;
                border: 2px solid #ccc; /* Tambahkan border abu-abu */
                border-radius: 24px;
              "
              src="<%= result.Image %>"
              alt="<%= result.Title %>" />

            <a
              class="mt-2"
              href="/details/<%= result.id %>"
              style="color: #f7ffff !important; margin-left: 20px">
              <h4><%= result.Title %></h4>
              <p style="color: white !important">
                <%- result.Content[0].babContent.replace(/<[^>]+>/g,
                '').substring(0, 20) %>...
              </p>
            </a>
          </div>
          <% if (index !== results.length - 1) { %>
          <hr class="hr" style="border-top: 1px solid white" />
          <% } %>
        </li>

        <% }); %>
        <div class="d-flex align-items-center m-3">
          <a class="mt-2" style="color: #f7ffff !important; margin-left: 20px">
            <h4>Dak Do Lagi lah..</h4>
          </a>
        </div>
      </ul>
    </div>
  </body>
</html>
