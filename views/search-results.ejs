<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include('import.ejs') -%>
    <title>RejangPedia</title>
  </head>
  <body>
    <%- include('navbar.ejs') -%>

    <div class="container mt-5">
      <h1 class="display-4">Iko Kan Sanak?</h1>
      <ul class="list-group">
        <% results.forEach(function (result) { %>
        <li class="list-group-item">
          <div class="d-flex align-items-center">
            <img
              class="listing-image"
              style="
                width: 60px;
                height: 60px;
                object-fit: cover;
                border: 2px solid #ccc; /* Tambahkan border abu-abu */
                border-radius: 24px;
              "
              src="<%= result.Image %>"
              alt="<%= result.Title %>" />

            <a
              class="mt-2"
              href="/details/<%= result.id %>"
              style="color: #0aa2c4ff !important; margin-left: 20px">
              <h4><%= result.Title %></h4>
              <p>
                <%- result.Content[0].babContent.replace(/<[^>]+>/g,
                '').substring(0, 20) %>...
              </p>
            </a>
          </div>
          <hr class="hr" />
        </li>

        <% }); %>
        <h5>Dak Do Lagi lah..</h5>
      </ul>
    </div>
  </body>
</html>
